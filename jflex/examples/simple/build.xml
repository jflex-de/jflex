<project name="simple scanner" default="compile">

  <property name="jflex" value="../../target/jflex-full-1.7.1-SNAPSHOT.jar"/>

  <taskdef classname="jflex.anttask.JFlexTask" name="jflex" classpath="${jflex}"/>

  <target name="formica" depends="clean,compile" />

  <target name="run" depends="compile">
    <java classname="Yylex" classpath="formica">
      <arg line="src/test/resources/test.txt"/>
    </java>
  </target>

  <target name="test" depends="run">
    <!-- TODO(#384) compare output with golden. -->
  </target>

  <target name="compile" depends="scanner">
    <javac destdir="formica">
      <src path="src/main/java/" />
      <src path="build/"/>
    </javac>
  </target>

  <target name="scanner">
    <jflex file="src/main/jflex/simple.flex" destdir="formica"/>
  </target>

  <target name="clean">
    <delete dir="formica"/>
  </target>
</project>
